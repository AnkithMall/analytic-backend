# Hostname of the Neon PostgreSQL instance
PG_HOST=ep-tiny-forest-********-pooler.c-2.us-east-1.aws.neon.tech

# PostgreSQL connection details
PG_PORT=5432
PG_USER=neondb_owner
PG_PASSWORD=replace_with_real_password
PG_DATABASE=analytics

# Neon requires SSL â†’ keep this true
